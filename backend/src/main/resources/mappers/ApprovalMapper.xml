<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.entvy.openbidhub.mapper.ApprovalMapper">

    <select id="selectPendingApprovals" resultType="com.entvy.openbidhub.dto.ApprovalDto">
        SELECT
        item_id AS itemId,
        item_name AS itemName,
        status,
        created_at AS createdAt
        FROM auction_items
        WHERE status = '승인대기'
        ORDER BY created_at DESC
    </select>

</mapper>
